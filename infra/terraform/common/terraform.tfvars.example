# このファイルを terraform.tfvars（または環境別の命名）としてコピーし、環境に合わせて値を調整してください。
project     = "developer-showcase"
environment = "dev"
aws_region  = "ap-northeast-1"
aws_profile = "developer-showcase"

# Amazon EventBridge のコストアラート設定
budget_limit        = 100
time_unit           = "MONTHLY"
currency            = "USD"
notification_emails = [
  "alerts@example.com",
  # "ops@example.com",
]
